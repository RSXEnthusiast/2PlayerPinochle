<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="game.twoplayerpinochle">

    <application
        android:allowBackup="true"
        android:icon="@drawable/temp_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/temp_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.TwoPlayerPinochle">
        <activity
            android:name="game.twoplayerpinochle.Pinochle"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="game.twoplayerpinochle.Main"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>